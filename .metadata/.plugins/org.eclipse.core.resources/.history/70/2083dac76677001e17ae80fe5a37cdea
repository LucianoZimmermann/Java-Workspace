package application;

import java.util.Locale;
import java.util.Scanner;

import entities.People;

public class Program {

    public static void main(String[] args) {

        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);

        System.out.println("How many people need to keep data?");
        int n = sc.nextInt();

        People[] vect = new People[n];
        int minorCount = 0; // Alteração 1: Use um contador inteiro para contar as pessoas menores de 16 anos
        People[] minorPeople = new People[n]; // Alteração 2: Crie um array para armazenar as pessoas menores de 16 anos

        for (int i = 0; i < vect.length; i++) {
            sc.nextLine();
            System.out.println("Name: ");
            String name = sc.nextLine();
            System.out.println("Age: ");
            int age = sc.nextInt();
            System.out.println("Height: ");
            double height = sc.nextDouble();
            vect[i] = new People(name, age, height);
            if (vect[i].getAge() < 16) {
                minorCount++;
                minorPeople[minorCount - 1] = vect[i]; // Adição 1: Adicione a pessoa ao array de pessoas menores de 16 anos
            }
        }

        double sum = 0.0;

        for (int i = 0; i < vect.length; i++) {
            sum += vect[i].getHeight();
        }

        double avg = sum / n;
        double porcentageMinor = ((double) minorCount / n) * 100; // Alteração 3: Corrija a porcentagem

        System.out.printf("Average Height: %.2f%n", avg);
        System.out.printf("People under 16 years old: %d (%.2f%%)%n", minorCount, porcentageMinor);

        // Adição 2: Imprima os nomes das pessoas menores de 16 anos
        System.out.println("Names of people under 16 years old:");
        for (int i = 0; i < minorCount; i++) {
            System.out.println(minorPeople[i].getName());
        }

        sc.close();
    }
}
