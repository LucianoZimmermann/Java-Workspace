package application;

import java.util.Locale;
import java.util.Scanner;

import entities.People;

/*Tem-se um conjunto de dados contendo a altura e o gênero (M, F) de N pessoas. Fazer um programa 
que calcule e escreva a maior e a menor altura do grupo, a média de altura das mulheres, e o número 
de homens.*/

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.println("How many people have the list? ");
		int n = sc.nextInt();
		int masculine = 0;
		int feminine = 0;
		double sumHeight = 0.0;
		double mediumHeight = 0.0;
		double femaleSumHeight = 0.0;
		double shorterHeight = 0.0;
		double greaterHeight = 0.0;
		
		
		People[] vect = new People[n];
		
		for(int i=0;i<vect.length;i++) {
			sc.nextLine();
			System.out.println("Name: ");
			String name = sc.nextLine();
			System.out.println("Gender: ");
			char gender = sc.nextLine().charAt(0);
			System.out.println("Height: ");
			double height = sc.nextDouble();
			vect[i] = new People(name, gender, height);
			sumHeight += vect[i].getHeight();
			
			if(shorterHeight == 0) {
				shorterHeight = vect[i].getHeight();
			}
			
			if(vect[i].getHeight() > greaterHeight) {
				greaterHeight = vect[i].getHeight();
			}
				
			if(vect[i].getHeight() < shorterHeight) {
				shorterHeight = vect[i].getHeight();
			}
			
			if(vect[i].getGender() == 'M' || vect[i].getGender() == 'm') {
				masculine++;
			}
			
			if(vect[i].getGender() == 'F' || vect[i].getGender() == 'f') {
				feminine++;
				femaleSumHeight += vect[i].getHeight();
			}
			
			mediumHeight = sumHeight / i;
			System.out.printf("Parcial medium height: %.2f", mediumHeight);
		}
		
		double femeleAvgHeight = femaleSumHeight / feminine;
		
		System.out.printf("Shorter height = %.2f"
				+ "\nGreater height = %.2f"
				+ "\nAverage height of women = %.2f"
				+ "\nNumber of men = %.2f"
				+ "Final medium height: %.2f%n",shorterHeight, greaterHeight, femeleAvgHeight, masculine, mediumHeight);
		
		sc.close();
	}

}
